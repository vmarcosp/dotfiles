{
  "diagnostic.errorSign": "❗️",
  "diagnostic.warningSign": "⚠️ ",
  "diagnostic.infoSign": "⚠️ ",
  "javascript.validate.enable": false,
  "coc.preferences.formatOnSaveFiletypes": ["rescript", "ocaml", "reason", "ml", "re", "md"],
  "eslint.autoFixOnsave": false,
  "tsserver.enableJavascript": true,
  "tsserver.enableTypescript": false,
  "languageserver": {
    "ocaml-lsp": {
    "command": "esy",
    "args": ["sh", "-c", "ocamllsp"],
    "filetypes": ["ocaml", "reason"]
  },
    "rescript": {
      "enable": true,
      "module": "~/.config/nvim/plugged/vim-rescript/server/out/server.js",
      "args": ["--node-ipc"],
      "filetypes": ["rescript"],
      "rootPatterns": ["bsconfig.json"]
    }
  }
}
