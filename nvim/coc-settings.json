{
  "diagnostic.errorSign": "❗️",
  "diagnostic.warningSign": "⚠️ ",
  "diagnostic.infoSign": "⚠️ ",
  "javascript.validate.enable": false,
  "coc.preferences.formatOnSaveFiletypes": ["rescript", "json"],
  "eslint.autoFixOnsave": true,
  "tsserver.enableJavascript": true,
  "tsserver.enableTypescript": false,
  "languageserver": {
    "haskell": {
      "command": "haskell-language-server-wrapper",
      "args": ["--lsp"],
      "rootPatterns": [
        "*.cabal",
        "stack.yaml",
        "cabal.project",
        "package.yaml",
        "hie.yaml"
      ],
      "filetypes": ["haskell", "lhaskell"]
    },
    "ocaml-lsp": {
      "command": "esy",
      "args": ["sh", "-c", "ocamllsp"],
      "filetypes": ["ocaml", "reason"]
    },
    "rescript": {
      "enable": true,
      "module": "~/.config/nvim/plugged/vim-rescript/server/out/server.js",
      "args": ["--node-ipc"],
      "filetypes": ["rescript"],
      "rootPatterns": ["bsconfig.json"]
    }
  }
}
