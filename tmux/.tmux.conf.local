# Terminal
tmux_conf_theme_terminal_title='#W'
tmux_conf_theme_window_status_current_format='#W#{?window_zoomed_flag,::zoomed,}'
tmux_conf_theme_window_status_format='#W'

# Panels
tmux_conf_theme_status_left=' #S '
tmux_conf_theme_status_right=' üóìÔ∏è  %d %b üïë %R  '
# tmux_conf_theme_status_right=' üïë %R  '
tmux_conf_copy_to_os_clipboard=true
set -g history-limit 10000
set -g status-keys vi
set -g mode-keys vi

bind -n C-S-M-Left swap-window -t -1\; select-window -t -1
bind -n C-S-M-Right swap-window -t +1\; select-window -t +1

bind -n M-Left select-pane -L
bind -n M-Right select-pane -R
bind -n M-Up select-pane -U
bind -n M-Down select-pane -D

bind - split-window -h

bind \\ split-window -v

# Rebind do `s` para exibir a √°rvore de pain√©is em ordem alfab√©tica
bind s choose-tree -s -Z -O name

